<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">
    <EditText
        android:id="@+id/ed_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/edit_shape"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="请输入手机号"
        />
    <EditText
        android:id="@+id/ed_pass"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_name"
        android:background="@drawable/edit_shape"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:password="true"
        android:hint="请输入密码"
        />
    <CheckBox
        android:id="@+id/remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="@id/ed_pass"
        app:layout_constraintTop_toBottomOf="@id/ed_pass"
        android:text="记住密码"
        />
    <CheckBox
        android:id="@+id/auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintRight_toRightOf="@id/ed_pass"
        app:layout_constraintTop_toBottomOf="@id/ed_pass"
        android:text="自动登录"
        />
    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/ed_pass"
        app:layout_constraintTop_toBottomOf="@id/remember"
        android:background="@drawable/button_selector_enable"
        android:enabled="false"
        android:layout_marginTop="25dp"
        android:text="登录"
        android:textSize="20sp"
        android:padding="10dp"
        />
    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/ed_pass"
        app:layout_constraintTop_toBottomOf="@id/auto"
        android:layout_marginTop="25dp"
        android:text="注册"
        android:textSize="20sp"
        android:padding="10dp"
        />
    <ImageView
        android:id="@+id/qq"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/umeng_socialize_qq"
        />
</android.support.constraint.ConstraintLayout>